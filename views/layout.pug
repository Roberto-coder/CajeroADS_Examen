doctype html
html
  head
    title Maze Bank - Bienvenido
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
    link(rel='stylesheet' href='css/style.css')
  body
    .container
      header.d-flex.justify-content-between.align-items-center.mt-3.mb-5
        .logo
          img(src='/imagenes/logo.jpg' alt='Maze Bank Logo')
        .user-info.text-right
          p.mb-1 Bienvenido, #{username}
          p.mb-1 Saldo: $#{balance}
    
      block content

      footer.text-center.mt-5
        p &copy; 2024 Maze Bank. Todos los derechos reservados.
    script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js')
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js')

extends layout

block content
  .row.justify-content-center
    .col-md-6
      .card
        .card-body
          a.btn.btn-danger.flex-fill.mb-2(href='/index') Inicio
          h3.text-center Saldo Actual
          p.display-4.text-center $#{balance}
          
          form(action='/depositar' method='post')
            .form-group
                label(for='username') Cantidad
                input.form-control(type='text' id='username' name='cantidad' required)
            .form-group
                label(for='password') Concepto
                input.form-control(type='text' id='concepto' name='concepto' value='Dep√≥sito' readonly)
            .form-group
                button.btn.btn-danger.btn-block(type='submit') Depositar
